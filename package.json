{
  "name": "{appname}",
  "version": "1.0.0",
  "description": "{description}",
  "main": "index.mjs",
  "scripts": {
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/univuc/{appname}.git"
  },
  "keywords": [
    "lms"
  ],
  "author": "potados99",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/univuc/{appname}/issues"
  },
  "homepage": "https://github.com/univuc/{appname}#readme",
  "dependencies": {
    "@hapi/hapi": "^19.1.1",
    "esm": "^3.2.25",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "eslint": "^6.8.0",
    "babel-eslint": "^10.1.0",
    "jest": "^25.3.0",
    "babel-jest": "^25.3.0"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.?(m)js?(x)",
      "**/?(*.)(spec|test).?(m)js?(x)"
    ],
    "collectCoverageFrom": [
      "**/*.{mjs,js,}",
      "!index.mjs",
      "!config.mjs",
      "!test/**",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.m?js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "./node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "mjs"
    ]
  }
}
